# Diagram Tools Hub Configuration Example
# Copy this file to .env and modify the values as needed

# External Port Configuration
# HTTP port (when HTTPS is disabled)
HTTP_PORT=8080

# HTTPS ports (when HTTPS is enabled)
HTTPS_PORT=8080
HTTP_REDIRECT_PORT=80

# SSL Configuration
# Domain name for SSL certificate generation (used as CN and SAN)
SSL_DOMAIN=localhost

# TLDraw Configuration
# Set to 'true' to enable the debug panel in tldraw
TLDRAW_DEBUG_PANEL=false

# Development Configuration
NODE_ENV=production

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false

# Docker Configuration
COMPOSE_PROJECT_NAME=diagram-tools-hub
