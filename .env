# Diagram Tools Hub Configuration

# External Port Configuration
# HTTP port (when HTTPS is disabled)
HTTP_PORT=8080

# HTTPS ports (when HTTPS is enabled)
HTTPS_PORT=8080
HTTP_REDIRECT_PORT=80

# SSL Configuration
# Domain name for SSL certificate generation
SSL_DOMAIN=localhost

# TLDraw Configuration
TLDRAW_DEBUG_PANEL=true

# Development Configuration
NODE_ENV=production

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false

# Docker Configuration
COMPOSE_PROJECT_NAME=diagram-tools-hub

# Allowed hostnames for Vite development server for plantuml
# Comma-separated list of hostnames that are allowed to access the dev server
VITE_ALLOWED_HOSTS=draw.embeddedinn.ca,localhost,127.0.0.1