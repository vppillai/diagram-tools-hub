# Diagram Tools Hub Configuration

# External Port Configuration
# HTTP port (when HTTPS is disabled)
HTTP_PORT=8080

# HTTPS port (when HTTPS is enabled) - main access port
HTTPS_PORT=8080

# SSL Configuration
# Domain name for SSL certificate generation
SSL_DOMAIN=localhost

# TLDraw Configuration
TLDRAW_DEBUG_PANEL=true

# Development Configuration
NODE_ENV=production

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false

# Docker Configuration
COMPOSE_PROJECT_NAME=diagram-tools-hub
